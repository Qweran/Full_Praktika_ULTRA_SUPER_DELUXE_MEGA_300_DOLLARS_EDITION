<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?bgcolor"
    tools:context=".MainActivity2">

    <ImageButton
        android:id="@+id/tupoLogoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/authorText"
        android:layout_width="69dp"
        android:layout_height="31dp"

        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:text="БТПИТ"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="@id/tupoLogoBtn"
        app:layout_constraintStart_toEndOf="@+id/tupoLogoBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dataPostaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:text="22 июня 1941 04:00"
        android:textSize="10sp"

        app:layout_constraintBottom_toBottomOf="@id/tupoLogoBtn"
        app:layout_constraintStart_toEndOf="@+id/tupoLogoBtn"
        app:layout_constraintTop_toBottomOf="@id/authorText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:text="@string/BigText"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/tupoLogoBtn"></TextView>

    <ImageButton
        android:id="@+id/ssilka"
        android:layout_width="411dp"
        android:layout_height="127dp"
        android:layout_marginBottom="46dp"
        android:src="@drawable/saw"
        app:layout_constraintBottom_toBottomOf="@+id/commentBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/repostCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/repostBtn"
        app:layout_constraintStart_toEndOf="@+id/repostBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.958" />

    <ImageButton
        android:id="@+id/likeBtn"
        android:layout_width="46dp"
        android:layout_height="36dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="360dp"
        android:contentDescription="image"
            android:background="?bgcolor"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/i" />

    <TextView
        android:id="@+id/likeCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="1999"
        app:layout_constraintBottom_toBottomOf="@+id/likeBtn"
        app:layout_constraintStart_toEndOf="@+id/likeBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.923" />

    <ImageButton
        android:id="@+id/repostBtn"
        android:layout_width="34dp"
        android:layout_height="32dp"

        android:layout_marginEnd="88dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@id/likeBtn"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_share" />

    <ImageView
        android:id="@+id/prosmotrImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@id/repostBtn"
        app:layout_constraintEnd_toEndOf="@id/textView2"
        app:srcCompat="@android:drawable/ic_menu_view" />

    <TextView
        android:id="@+id/countprosmotr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/prosmotrImageView"

        app:layout_constraintStart_toEndOf="@+id/prosmotrImageView" />

    <ImageButton
        android:id="@+id/commentBtn"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="188dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@android:drawable/stat_notify_chat" />

    <TextView
        android:id="@+id/commentCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="184dp"
        android:text="20"
        app:layout_constraintStart_toEndOf="@+id/commentBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/menuBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="179dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/authorText"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ds" />

    <TextView
        android:id="@+id/linktxt"
        android:layout_width="403dp"
        android:layout_height="34dp"
        android:layout_marginTop="6dp"
        android:clickable="true"
        android:autoLink="all"
        android:layout_marginBottom="137dp"
        app:layout_constraintBottom_toBottomOf="@+id/ssilka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>